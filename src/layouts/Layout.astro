---
export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <meta
      name='description'
      content='Third year information system undergraduate based in Surabaya, Indonesia. This is my portfolio sites thoughts, experiences, and projects'
    />
    <meta
      name='keyword'
      content='portfolio, javascript, developer, nextjs, typescript, tailwind'
    />
    <link rel='icon' type='image/x-icon' href='/favicon.ico' />
    <title>{title} - Ramadhana Rizqy Arifin</title>
  </head>
  <nav
    class='flex justify-between bg-violet-50/[10%] px-9 py-4 sticky top-0 z-10 backdrop-blur-md'
  >
    <a href='/' class='font-black transition-transform hover:rotate-[10deg]'>
      DHANA
    </a>
    <ul class='hidden sm:flex gap-x-6'>
      <li><a href='/'>Home</a></li>
      <li><a href='#experience'>Experience</a></li>
      <li><a href='#project'>Project</a></li>
      <li>
        <a href='https://github.com/dhaaana'>Github</a>
      </li>
    </ul>
  </nav>
  <div>
    <slot />
  </div>
  <footer>
    <p class='text-sm text-center pb-6 pt-4'>
      Created with &#128156 by <a
        href='https://github.com/dhaaana'
        class='font-semibold hover:text-purple-900'
        >Dhana
      </a>
    </p>
  </footer>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap');

    :root {
      --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
      --font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
      --font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

      --primary-color: #8b5cf6;
      --secondary-color: #ec4899;

      --color-text: #1f2937;
      --color-bg: #f1f5f9;
      --color-border: hsl(17, 24%, 90%);
    }

    html {
      font-family: Inter, system-ui, sans-serif;
      font-size: var(--font-size-base);
      color: var(--color-text);
      background-color: hsla(0, 100%, 98%, 1);
      background-image: radial-gradient(
          at 81% 1%,
          hsla(287, 78%, 72%, 0.11) 0px,
          transparent 50%
        ),
        radial-gradient(
          at 28% 89%,
          hsla(271, 76%, 61%, 0.1) 0px,
          transparent 50%
        ),
        radial-gradient(
          at 46% 84%,
          hsla(266, 94%, 64%, 0.1) 0px,
          transparent 50%
        ),
        radial-gradient(
          at 96% 59%,
          hsla(342, 84%, 70%, 0.12) 0px,
          transparent 50%
        ),
        radial-gradient(
          at 12% 52%,
          hsla(338, 67%, 63%, 0.1) 0px,
          transparent 50%
        ),
        radial-gradient(
          at 79% 44%,
          hsla(59, 85%, 69%, 0.13) 0px,
          transparent 50%
        ),
        radial-gradient(
          at 87% 94%,
          hsla(187, 85%, 62%, 0.15) 0px,
          transparent 50%
        );
      scroll-behavior: smooth;
    }

    body {
      margin: 0;
    }

    :global(h1, .h1) {
      font-size: var(--font-size-xl);
    }

    :global(h2) {
      font-size: var(--font-size-lg);
    }

    :global(code) {
      font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
        DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
    }

    :global(.animated-underline) {
      background-image: linear-gradient(#33333300, #33333300),
        linear-gradient(to right, var(--primary-color), var(--secondary-color));
      background-size: 100% 10px, 0 2px;
      background-position: 100% 100%, 0 100%;
      background-repeat: no-repeat;
    }

    :global(.animated-underline:hover),
    :global(.animated-underline:focus-visible) {
      background-size: 0 2px, 100% 2px;
    }
  </style>


</html>
